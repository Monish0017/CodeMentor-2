{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/index.js",
    "app/_layout.js",
    "src/**/*.js",
    "src/**/*.jsx",
    "App.js"
  ]
}
